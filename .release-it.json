{
  "git": {
    "requireCleanWorkingDir": true,
    "tag": false,
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "commit": true,
    "commitMessage": "chore(release): ${version}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "draft": false
  },
  "hooks": {
    "after:release": "echo Successfully bumped release to ${version} for ${repo.repository}."
  },
  "npm": false,
  "plugins": {
    "@release-it/bumper": {
      "out": [ "README.md", "custom_components/thermal_vision/manifest.json", "custom_components/thermal_vision/const.py", "VERSION" ]
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "header": "Release notes",
        "types": [
          {"type": "feat", "section": "Features"},
          {"type": "fix", "section": "Bug Fixes"},
          {"type": "chore", "hidden": true},
          {"type": "docs", "hidden": true},
          {"type": "style", "hidden": true},
          {"type": "refactor", "hidden": true},
          {"type": "perf", "section": "Performance Enhancements"},
          {"type": "test", "hidden": true},
          {"type": "build", "hidden": true},
          {"type": "ci", "hidden": true},
          {"type": "revert", "section": "Reversions"}
        ]
      }
    }
  }
}
